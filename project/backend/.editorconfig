[*]
charset = utf-8
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true
indent_style = space
indent_size = 4

[*.yml]
indent_size = 2
indent_style = space

[*.php]
indent_style = space
indent_size = 4

[*.xml]
indent_style = tab
indent_size = 4

[*.neon]
indent_style = tab
indent_size = 4

[*.test]
indent_style = space
indent_size = 4

[*.rst]
indent_style = space
indent_size = 4

[composer.json]
indent_style = tab
indent_size = 4
